{
  "name": "ebook-reader",
  "version": "0.1.0",
  "description": "State management layer for ebook reader application",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "npx serve . -p 3000",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "ebook",
    "reader",
    "state-management",
    "zustand",
    "indexeddb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dexie": "^3.2.4",
    "zustand": "^4.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "fake-indexeddb": "^5.0.2",
    "jsdom": "^23.0.1",
    "serve": "^14.2.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
